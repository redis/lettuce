<mapper namespace="flavour.WaterMapper">

    <resultMap id="WaterResultMap" type="flavour.Water">
        <id property="id" column="id"/>
        <result property="size" column="size"/>
        <result property="flavourId" column="flavourId"/>
        <association property="flavour" column="flavourId"
                     javaType="Flavour"
                     select="flavour.FlavourMapper.retrieve"/>
    </resultMap>

    <insert id="create" parameterType="Water">
        insert into
            water(
                size,
                flavourId
            )
        values (
            #{size},
            #{flavourId}
        )
        <selectKey order="AFTER" resultType="int" keyProperty="id">
            CALL IDENTITY()
        </selectKey>
    </insert>

    <sql id="where">
        WHERE
            id = #{id}
    </sql>

    <select id="retrieve" parameterType="java.lang.Integer" resultMap="WaterResultMap">
        select
            *
        from
            water
        <include refid="where"/>
    </select>

    <update id="update" parameterType="Water">
        update
            water
        set
            size = #{size},
            flavourId = #{flavourId}
        <include refid="where"/>
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from
            water
        <include refid="where"/>
    </delete>

</mapper>
